<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        app:layout_behavior=""
        android:layout_height="match_parent"
        tools:context=".Drum.Wooden_Drum_INCH"
        android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <TextView android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"/>
            <TextView android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="INCH"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="15sp"/>
            <TextView android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="WIDTH"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"/>
            <TextView android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="QTY"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="15sp"/>
            <TextView android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="CFT"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="end"
                android:textSize="15sp"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <TextView android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Chakkar"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                />
            <EditText
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:maxLength="4"
                android:selectAllOnFocus="true"
                android:hint="82"
                android:id="@+id/etinchckr"
                android:layout_weight="1"
                android:imeOptions="actionNext"/>

            <EditText
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:maxLength="4"
                android:selectAllOnFocus="true"
                android:hint="1.5"
                android:imeOptions="actionNext"
                android:id="@+id/etinchckrwidth" android:layout_weight="1"/>
            <EditText
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:maxLength="4"
                android:selectAllOnFocus="true"
                android:imeOptions="actionNext"
                android:hint="2"
                android:id="@+id/etinchckrqty" android:layout_weight="1"/>
            <TextView android:layout_width="70dp" android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:id="@+id/txtinchckrcft"
                android:gravity="end"

                />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Chakkri"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"/>
            <EditText android:layout_width="70dp" android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:selectAllOnFocus="true"
                android:hint="45"
                android:maxLength="4"
                android:imeOptions="actionNext"
                android:layout_weight="1" android:id="@+id/etinchckri"/>
            <EditText android:layout_width="70dp" android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:maxLength="4"
                android:selectAllOnFocus="true"
                android:hint="1.25"
                android:imeOptions="actionNext"
                android:layout_weight="1" android:id="@+id/etinchckriwidth"/>
            <EditText android:layout_width="70dp" android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:maxLength="4"
                android:selectAllOnFocus="true"
                android:hint="2"
                android:imeOptions="actionNext"
                android:layout_weight="1" android:id="@+id/etinchckriqty"/>
            <TextView android:layout_width="70dp" android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:gravity="end"
                android:id="@+id/txtinchckricft"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="MCD"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"/>
            <EditText android:layout_width="80dp" android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:hint="45"
                android:maxLength="4"
                android:selectAllOnFocus="true"
                android:imeOptions="actionNext"
                android:layout_weight="1" android:id="@+id/etinchmcd"/>
            <EditText android:layout_width="80dp" android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:maxLength="4"
                android:hint="1.25"
                android:selectAllOnFocus="true"
                android:imeOptions="actionNext"
                android:layout_weight="1" android:id="@+id/etinchmcdwidth"/>
            <EditText android:layout_width="80dp" android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:maxLength="4"
                android:hint="1"
                android:selectAllOnFocus="true"
                android:imeOptions="actionNext"
                android:layout_weight="1" android:id="@+id/etinchmcdqty"/>
            <TextView android:layout_width="70dp" android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:gravity="end" android:id="@+id/etinchmcdcft"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Sigmet"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"/>
            <EditText android:layout_width="80dp" android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:maxLength="4"
                android:selectAllOnFocus="true"
                android:imeOptions="actionNext"
                android:hint="7"
                android:layout_weight="1" android:id="@+id/etinchsw"/>
            <EditText android:layout_width="80dp" android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:maxLength="4"
                android:selectAllOnFocus="true"
                android:hint="1"
                android:imeOptions="actionNext"
                android:layout_weight="1" android:id="@+id/etinchh"/>
            <EditText android:layout_width="80dp" android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:maxLength="4"
                android:selectAllOnFocus="true"
                android:hint="2.25"
                android:imeOptions="actionNext"
                android:layout_weight="1" android:id="@+id/etinchsl"/>
            <EditText android:layout_width="80dp" android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:maxLength="4"
                android:hint="20"
                android:selectAllOnFocus="true"
                android:imeOptions="actionNext"
                android:layout_weight="1" android:id="@+id/etinchsq"/>
            <TextView android:layout_width="70dp" android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:gravity="end" android:id="@+id/etinchscft"/>

        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:weightSum="100"
            android:orientation="horizontal">
            <Button android:layout_width="0dp"
                android:text="CFT"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:id="@+id/btninchgcft"
                android:layout_weight="30"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_weight="70"
                android:text="Total CFT: 0.0"
                android:gravity="right"
                android:textColor="@color/colorAccent" android:id="@+id/etinchtcft"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:hint="Enter rate"
                android:maxLength="5"
                android:imeOptions="actionGo"
                android:layout_weight="50" android:id="@+id/etinchrate"/>
            <Button android:layout_width="50dp"
                android:background="@drawable/button_shape"
                android:padding="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/whiteruppe"
                android:id="@+id/btninchrate"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtinchview"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:text="Total Amount:"
                android:layout_weight="50"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_weight="50"
                android:textColor="@color/colorAccent"
                android:gravity="end" android:textSize="25sp" android:textStyle="bold"
                android:id="@+id/txtinchtamnt"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFffFF"
                android:drawableRight="@drawable/ic_save_white_24dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/colorPrimary"
                android:id="@+id/btninchsave"/>
            <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="View"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFffFF"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableRight="@drawable/ic_view_list_white_24dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/colorPrimary"
                android:id="@+id/btninchviewall"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>