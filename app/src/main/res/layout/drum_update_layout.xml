                        android:backgroundTint="@color/colorPrimary"
                        android:text="CFT"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
