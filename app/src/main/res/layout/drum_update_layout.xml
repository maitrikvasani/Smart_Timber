                    android:selectAllOnFocus="true" />

            <EditText
                    android:id="@+id/etmmckrwidth"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/width"
